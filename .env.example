# Apotekal Portal - Environment Variables Template
# Copy this to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_chars
PASSWORD_SALT_ROUNDS=12
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Application Configuration
APP_ENV=production
APP_DEBUG=false
ADMIN_EMAIL=admin@apotekal.com

# Security Headers
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; img-src 'self' data: https:; font-src 'self' https://cdn.jsdelivr.net;"